{
  "name": "php/profissional",
  "description": "Estudando php com composer",
  "authors": [
    {
      "name": "Heitor",
      "email": "heitor@gmail.com"
    }
  ],
  "require": {
    "sentry/sdk": "^3.1",
    "league/plates": "^3.4",
    "vlucas/phpdotenv": "^5.3",
    "doctrine/inflector": "2.0.4",
    "phpmailer/phpmailer": "^6.8",
    "twig/twig": "^3.0",
    "intervention/image": "^2.7"
  },
  "autoload": {
    "files": [
      "app/routers/Router.php",
      "app/core/Controller.php",
      "app/core/facades/UploadImage.php",
      "app/database/Connect.php",
      "app/database/Queries.php",
      "app/helpers/Redirect.php",
      "app/helpers/Flash.php",
      "app/helpers/Old.php",
      "app/helpers/Email.php",
      "app/helpers/Csrf.php",
      "app/helpers/Sessions.php",
      "app/helpers/Validate.php",
      "app/helpers/Validations.php",
      "app/helpers/Constants.php",
      "app/helpers/Helpers.php",
      "app/helpers/Upload.php"
    ],
    "psr-4": {
      "app\\": "app"
    }
  },
  "require-dev": {
    "symfony/var-dumper": "^6.0"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}